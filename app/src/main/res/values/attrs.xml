<resources>

    <!--Tour View pager-->
    <declare-styleable name="app">
        <attr name="bottomDragVisibleHeight" format="dimension" />
        <attr name="bototmExtraIndicatorHeight" format="dimension" />
    </declare-styleable>

    <!--  Page Indicator  -->
    <declare-styleable name="InkPageIndicator">
        <attr name="ipi_dotDiameter" format="dimension" />
        <attr name="ipi_dotGap" format="dimension" />
        <attr name="ipi_animationDuration" format="integer" />
        <attr name="ipi_pageIndicatorColor" format="color" />
        <attr name="ipi_currentPageIndicatorColor" format="color" />
    </declare-styleable>
    <!--  Screen Ratio  -->
    <declare-styleable name="RatioRelativeLayout">
        <attr name="horizontal_ratio" format="float" />
        <attr name="vertical_ratio" format="float" />
        <attr name="fixed_attribute" format="enum">
            <enum name="HEIGHT" value="0" />
            <enum name="WIDTH" value="1" />
        </attr>
    </declare-styleable>
    <!--  Step bar  -->
    <declare-styleable name="StepBarView">
        <attr name="sbv_max_count" format="integer" />
        <attr name="sbv_steps_reached_colors" format="color" />
        <attr name="sbv_steps_unreached_colors" format="color" />
        <attr name="sbv_steps_line_reached_colors" format="color" />
        <attr name="sbv_steps_line_unreached_colors" format="color" />
        <attr name="sbv_steps_line_height" format="dimension" />
        <attr name="sbv_steps_size" format="dimension" />
        <attr name="sbv_steps_text_color" format="color" />
        <attr name="sbv_steps_text_size" format="dimension" />
        <attr name="sbv_steps_line_margin_left" format="dimension" />
        <attr name="sbv_steps_line_margin_right" format="dimension" />
        <attr name="sbv_allow_touch_step_to" format="integer" />
        <attr name="sbv_show_step_index" format="boolean" />
        <attr name="sbv_show_step_name" format="boolean" />
        <attr name="sbv_steps_stroke_size" format="dimension" />
        <attr name="sbv_steps_stroke_reached_color" format="dimension" />
        <attr name="sbv_steps_stroke_unreached_color" format="dimension" />
        <attr name="sbv_steps_stroke_current_color" format="dimension" />
        <attr name="sbv_show_step_stroke" format="boolean" />
        <attr name="sbv_is_rtl" format="boolean" />
        <attr name="sbv_is_fixed_steps_line_width" format="boolean" />
        <attr name="sbv_steps_line_width" format="dimension" />
    </declare-styleable>

    <!--OTP-->
    <declare-styleable name="OtpViewTheme">
        <attr name="otpViewStyle" format="reference" />
    </declare-styleable>

    <declare-styleable name="OtpView">
        <attr name="itemCount" format="integer" />
        <attr name="itemWidth" format="dimension" />
        <attr name="itemHeight" format="dimension" />
        <attr name="itemRadius" format="dimension" />
        <attr name="itemSpacing" format="dimension" />
        <attr name="lineWidth" format="dimension" />
        <attr name="lineColor" format="reference|color" />
        <attr name="viewType" format="enum">
            <enum name="rectangle" value="0" />
            <enum name="line" value="1" />
            <enum name="none" value="2" />
        </attr>
        <attr name="android:cursorVisible" />
        <attr name="cursorWidth" format="dimension" />
        <attr name="cursorColor" format="reference|color" />
        <attr name="android:itemBackground" />
        <attr name="hideLineWhenFilled" format="boolean" />
        <attr name="state_filled" format="boolean" />
        <attr name="rtlTextDirection" format="boolean" />
    </declare-styleable>


</resources>